{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "functions"]
}
